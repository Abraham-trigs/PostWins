{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@posta/core": ["packages/core/src/index.ts"]
    },
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules", "dist"]
}
